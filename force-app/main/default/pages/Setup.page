<apex:page controller="SetupController" lightningStylesheets="true" >
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <apex:stylesheet value="{!URLFOR($Resource.SLDS, 'styles/salesforce-lightning-design-system.css')}"/>
    </head>
    <body class="slds-scope">
        <div class="slds">
            <div class="slds-grid slds-wrap slds-p-around_medium">
                <div class="slds-col slds-size_3-of-12">
                </div>
                <div class="slds-col slds-size_6-of-12">
                    <div class="slds-box slds-theme_default">
                        <h2 class="slds-text-heading_medium">Configuration</h2>
                        <apex:form id="form1">
                            <apex:pageMessages />
                            
                            <div class="slds-form slds-form_stacked">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="accountId">Account Id</label>
                                    <div class="slds-form-element__control">
                                        <apex:inputText value="{!accountId}" id="accountId" styleClass="slds-input" required="true"/>
                                    </div>
                                </div>
                                
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="endpointUrl">Endpoint URL</label>
                                    <div class="slds-form-element__control">
                                        <apex:inputText value="{!endpointUrl}" id="endpointUrl" styleClass="slds-input" required="true"/>
                                    </div>
                                </div>
                                
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="callbackUrl">Callback URL</label>
                                    <div class="slds-form-element__control">
                                        <apex:inputText value="{!callbackUrl}" id="callbackUrl" styleClass="slds-input" required="true"/>
                                    </div>
                                </div>
                                
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="tokenBearer">Token Bearer</label>
                                    <div class="slds-form-element__control">
                                        <apex:inputText value="{!tokenBearer}" id="tokenBearer" styleClass="slds-input" required="true"/>
                                    </div>
                                </div>
                                
                                <div class="slds-m-top_medium">
                                    <apex:commandButton value="Save" action="{!saveConfig}" reRender="form1" styleClass="slds-button slds-button_brand"/>
                                </div>
                            </div>
                        </apex:form>
                    </div>
                </div>
                <div class="slds-col slds-size_3-of-12">
                </div>
            </div>
        </div>
    </body>
</apex:page>
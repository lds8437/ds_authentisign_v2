<apex:component >
    
    <apex:attribute name="SelectOptionQuote" type="SelectOption"  required="true" description=""/>
    <apex:attribute name="SelectOptionQuoteLI" type="SelectOption"  required="true" description=""/>
    <apex:attribute name="SelectOptionLIRecords" type="SelectOption"  required="true" description=""/>
    <apex:attribute name="SelectOptionUserContact" type="SelectOption"  required="true" description=""/>
    <apex:attribute name="MappingValues" type="FieldMappingValue[]"  required="true" description=""/>
    <apex:attribute name="ParticipantMappingValues" type="ParticipantMappingValue[]"  required="true" description=""/>
    
    <!--
